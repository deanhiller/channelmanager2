    <depends>api</depends>
</package>

<package name="testServiceProxy" package="org.playorm.nio.test.serviceproxy" subpackages="include">
    <depends>serviceproxy</depends>
</package>

<package name="mainImpl" package="org.playorm.nio.impl" depends="api"/>

